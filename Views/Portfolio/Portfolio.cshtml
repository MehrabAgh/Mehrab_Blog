@{  
    ViewData["Title"] = "Portfolio Page";      
}
@model List<PortfolioModel>


<div class="site-hero py-5 bg-light mb-5">

    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-12 text-center">
                <h1 class="text-black mb-0">Portfolio</h1>
            </div>
        </div>
    </div>
</div>

<section class="site-section pt-0" id="portfolio-section">
    <div class="container">

        <div class="filters" data-aos="fade-up" data-aos-delay="100">
            <ul>
                <li class="active" data-filter="*">All</li>
                <li data-filter=".game">Game</li>
                <li data-filter=".app">App</li>
                <li data-filter=".ai">Ai</li>
                <li data-filter=".art">Art</li>
            </ul>
        </div>

        <div class="filters-content mb-5" data-aos="fade-up" data-aos-delay="200">
            <div class="row grid">                               
                @foreach (var item in Model)
                {
                    <div class="isotope-card col-sm-4 all @item.WordFilter">
                        <a href="images/@item.ImageUri" data-fancybox="gal">
                            <img src="images/@item.ImageUri" alt="Image" class="img-fluid">
                            <div class="contents">
                                <h3>@item.Name</h3>
                                <div class="cat">@item.WordFilter</div>
                            </div>
                        </a>
                    </div>
                }             
            </div>
        </div>
    </div>
</section>

